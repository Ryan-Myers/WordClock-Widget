<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.foldor.wordclock"
    android:versionCode="3"
    android:versionName="2.0.1">
    <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="17" />
    <application android:label="@string/app_name" android:icon="@drawable/ic_menu_clock" android:allowBackup="true">
        <!-- Broadcast Receiver that will process AppWidget updates -->
        <receiver android:name=".WordClockReceiver">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.appwidget.action.APPWIDGET_ENABLED" />
                <action android:name="android.intent.action.SCREEN_ON"></action>
                <action android:name="android.intent.action.SCREEN_OFF"></action>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/widget" />
        </receiver>
        <activity android:name=".Preferences" android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"></action>
            </intent-filter>
        </activity>
    </application>
</manifest>