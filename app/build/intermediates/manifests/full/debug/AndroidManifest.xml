<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.foldor.wordclock"
    android:versionCode="4"
    android:versionName="2.1.0" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_menu_clock"
        android:label="@string/app_name" >

        <!-- Broadcast Receiver that will process AppWidget updates -->
        <receiver android:name="com.foldor.wordclock.WordClockReceiver" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.appwidget.action.APPWIDGET_ENABLED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget" />
        </receiver>

        <activity
            android:name="com.foldor.wordclock.Preferences"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <service
            android:name="com.foldor.wordclock.WordClockReceiver$UpdateService"
            android:exported="false"
            android:label=".UpdateService" >
            <intent-filter>
                <action android:name="com.foldor.wordclock.action.UPDATE" />
            </intent-filter>
        </service>
    </application>

</manifest>